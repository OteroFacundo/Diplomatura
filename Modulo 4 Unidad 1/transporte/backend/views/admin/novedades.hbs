<div class="container" style="margin-top: 50px; ">

    <div class="row">

        <div class="col">

            <p class="text-end">Hola {{ usuario }}! <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar
                    Sesi√≥n <i class="fa fa-sign-out"></i> </a></p>
        </div>

    </div>
    <div class="row">

        <div class="col-7">
            <h3>Listado de novedades</h3>

        </div>
        <div class="col-2 text-rigth">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus"></i>Nuevo</a>


        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">

                <thead class="thead-dark">

                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-end">Acciones</th>


                    </tr>


                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>

                        <th scope="row">{{ id }}</th>
                        <td>{{ titulo }} </td>
                        <td>{{{ imagen }}} </td>
                        <td class="text-end">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-trash"
                                    aria-hidden="true"></i></a>


                        </td>
                    </tr>
                    {{/each}}

                </tbody>

            </table>


        </div>


    </div>