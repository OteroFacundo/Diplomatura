<div class="container" style="margin: 50px auto">

<div class="row">

<div class="col-6 offset-3">

<h4>Modificar novedad</h4>
<form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">


<input type="hidden" value="{{novedad.id}}" class="form-control"  name="id">



<div class="mb-3 row">
<label for="titulo"><b>Titulo</b></label>
<input name="titulo" value="{{novedad.titulo}}" type="text" placeholder="Titulo" class="form-control">

</div>
<div class="mb-3 row">
<label for="subtitulo"><b> Subt√≠tulo</b></label>
<textarea name="subtitulo"   placeholder="Subtitulo" class="form-control">{{novedad.subtitulo}}</textarea>


</div>
<div class="mb-3 row">
    <label for="cuerpo"><b>Cuerpo</b></label>
<textarea name="cuerpo"  placeholder="Cuerpo" class="form-control">{{novedad.cuerpo}}</textarea>


</div>
<div class="mb-3 row">
<p>
<label>Imagen <input type="file" name="imagen" id="imagen"/></label>

</p>
<p>
<label > <input type="checkbox" name="img_delete" id="img_delete" value="1"/>Elimianr imagen actual?</label>
<input type="hidden" name="img_original" value="{{novedad.img_id}}" >

</p>
</div>

<button type="submit" class="btn btn-primary">Modificar</button>

</form>

{{#if error}}
<h5>{{message}}</h5>
{{/if}}
</div>

</div>


</div>