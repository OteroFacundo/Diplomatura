<div class="container" style="margin: 100px auto">

<div class="row">

<div class="col-6 offset-3">

<h4>Agregar una nueva novedad</h4>
<form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">

<div class="mb-3 row">
<input type="text" class="form-control" placeholder="Titulo" name="titulo">


</div>
<div class="mb-3 row">

<textarea name="subtitulo" type="text" placeholder="Subtitulo" class="form-control"></textarea>

</div>
<div class="mb-3 row">
<textarea name="cuerpo" type="text" placeholder="Cuerpo" class="form-control"></textarea>


</div>
<div class="form-group">
<label >Imagen <input type="file" name="imagen" id="imagen"> </label>

</div>

<button type="submit" class="btn btn-primary">Guardar</button>

</form>

{{#if error}}
<h5>{{message}}</h5>
{{/if}}
</div>

</div>


</div>